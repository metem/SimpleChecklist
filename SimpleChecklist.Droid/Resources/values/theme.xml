<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="MainTheme" parent="@android:style/Theme.Holo">
    <item name="android:windowBackground">@drawable/PageGradient</item>

    <item name="android:actionBarTabTextStyle">@style/actionBarTabTextStyle</item>
    <item name="android:actionBarStyle">@style/actionBarTabStyle</item>

    <item name="android:colorActivatedHighlight">@android:color/transparent</item>

    <item name="android:editTextColor">#FFFFFF</item>
    <item name="android:textColorPrimary">#FFFFFF</item>
    <item name="android:textColorSecondary">#FFFFFF</item>
    <item name="android:textColorTertiary">#FFFFFF</item>
    <item name="android:textColorPrimaryInverse">#FFFFFF</item>
    <item name="android:textColorSecondaryInverse">#FFFFFF</item>
    <item name="android:textColorTertiaryInverse">#FFFFFF</item>
  </style>

  <style name="actionBarTabStyle" parent="@android:Widget.Holo.ActionBar">
    <item name="android:background">#60003668</item>
  </style>
  
  <style name="actionBarTabTextStyle" parent="@android:Widget.Holo.ActionBar.TabText">
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textAllCaps">false</item>
  </style>
</resources>